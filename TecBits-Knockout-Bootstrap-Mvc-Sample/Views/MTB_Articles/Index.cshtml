@model IEnumerable<TecBits_Knockout_Bootstrap_Mvc_Sample.Models.MTB_Article>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Excerpt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Excerpt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div style="padding-top:10px;">
    <button data-bind="click: getArticles">Get the data with knockout</button>
</div>
<br />
<table data-bind="with: articles" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Excerpt</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: articles">
        <tr data-bind="click: getArticle" style="cursor:pointer">
            <td data-bind="text: Title"></td>
            <td data-bind="text: Excerpt"></td>
            <td data-bind="text: Content"></td>
        </tr>
    </tbody>
</table>

<div data-bind="with: article">
    <div class="row3">
        <div style="display:grid;"><h1 data-bind="text: Title"></h1></div>
        <div style="display:grid;"><label>Excerpt</label>: <span data-bind="text: Excerpt"></span></div>
        <div style="display:grid"><label>Author</label>: <span data-bind="text: article().Author.Name"></span></div>
        <div style="display:grid;"><label>Content</label>: <span data-bind="text: Content"></span></div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/Scripts/ViewModel/ArticlesVM.js");
}
